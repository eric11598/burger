<div class="jumbotron">
  <h1 class="display-4">Burger Shop</h1>
  <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>

</div>

<div class="container">
  <div class="row">
  <div class="col-sm-6">
    <ul>
      {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
    </ul>
  </div>

  <div class="col-sm-6">
    <ul>
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
    </ul>
  </div>

  <h2>Add a Burger</h2>

  <form class="create-form">

    <div class="form-group">
      <label for="ba">Burger Name:</label>
      <input type="text" id="ba" name="name">
    </div>
</div>
    <div class="form-group">
      <label for="devoured">Devoured?</label>
      <br>
      <input type="radio" name="devoured" value="1" checked> devoured!
      <br>
      <input type="radio" name="devoured" value="0"> not devoured
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>